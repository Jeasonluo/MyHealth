<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="6dp"
    app:cardBackgroundColor="#61A89F"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/item_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DF5F00"
            android:text="This is the Title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/item_home_button"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/item_home_title"
            android:layout_alignBottom="@id/item_home_title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_videocam"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_title"
            android:layout_marginTop="2dp"

            android:text="Something about it\nCheck it out for more information"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>